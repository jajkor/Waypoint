<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textBuildingName"
        android:layout_width="88dp"
        android:layout_height="19dp"
        android:contentDescription="@string/BuildingName"
        android:importantForAccessibility="yes"
        android:text="@string/BuildingName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/buttonSelectMap"
        android:layout_width="121dp"
        android:layout_height="69dp"
        android:contentDescription="@string/SelectMapDescription"
        android:importantForAccessibility="yes"
        android:text="@string/SelectMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipToggleView"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:contentDescription="@string/ToggleViewDescription"
        android:importantForAccessibility="yes"
        android:text="@string/ToggleView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        tools:text="2D/3D Toggle" />

    <Spinner
        android:id="@+id/selectFloor"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/SelectFloorDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />
</androidx.constraintlayout.widget.ConstraintLayout>
