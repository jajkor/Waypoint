<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Rydal Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRydal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgRydal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/rydal"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/rydal_image" />

                <TextView
                    android:id="@+id/btnRydal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rydal"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lares Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgLares"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/lares"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/lares_image" />

                <TextView
                    android:id="@+id/btnLares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lares"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Woodland Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWoodland"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgWoodland"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/woodland"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/woodland_image" />

                <TextView
                    android:id="@+id/btnWoodland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/woodland"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sutherland Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSutherland"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgSutherland"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/sutherland"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/sutherland_image" />

                <TextView
                    android:id="@+id/btnSutherland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sutherland"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
